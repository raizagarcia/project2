<h1>{{restaurant.name}}</h1>

<hr />

<br />
<br />
<input type="text" name="name" id="autocomplete" value="{{restaurant.name}}" />

<br />
<br />
<img
  src="{{restaurant.imgRestaurant}}"
  width="300"
  height="300"
  id="imgRestaurant"
/>

<br />
<br />
<div id="map" style="height: 250px"></div>

<a href="/restaurant-edit/{{restaurant._id}}">Edit restaurant</a>

<br />
<br />

<form action="/restaurant-delete/{{_id}}" method="post">

  <button type="submit">Delete restaurant</button>

</form>

<hr />

<h4>Leave a comment</h4>

<form action="/comment/create/{{restaurant._id}}" method="post">

  <input type="text" name="placeId" id="placeId" hidden />

  <select name="author">
    {{#each users}}
      <option value="{{_id}}">{{username}}</option>
    {{/each}}
  </select>

  <label for="content"></label>
  <textarea name="content" id="content" cols="30" rows="10"></textarea>
  <button type="submit">Comment</button>
</form>

<hr />

{{#each restaurant.comments}}
  <div>
    <p><span>By {{author.username}}: </span>{{content}}</p>
    <form action="/comment/delete/{{_id}}" method="post">
      <button type="submit">X</button>
    </form>
  </div>
{{/each}}