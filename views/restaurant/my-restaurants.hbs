
<div class="hero-image hero-my-restaurants">
  <div class="hero-text">
    <h1>My Restaurants</h1>
    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
  </div>
</div>

<div class="custom-shape-divider-bottom-1668019210">
    <svg data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
        <path d="M1200 0L0 0 598.97 114.72 1200 0z" class="shape-fill"></path>
    </svg>
</div>

<ul class="cards">
  {{#each userRest.restaurants}}
    <li>
      <div class="card">
        <a href="/review-details/{{_id}}"><img
            src="{{imgRestaurant}}"
            class="card__image"
            alt=""
          /></a>
        <div class="card__overlay">
          <div class="card__header">
            <svg class="card__arc"><path></path></svg>
            <img
              class="card__thumb"
              src="/images/restaurante-list_icon.png"
              alt=""
            />
            <div class="card__header-text">
              <h3 class="card__title">{{name}}</h3>



          {{#each reviews}}
              <span class="card__status">
                <div>
                  <div class="rating">
                    <input type="radio" id="star5" name="rating" value="5" disabled {{#is rating 5}} checked {{/is}} />
                    <label class="star" for="star5" title="Awesome" aria-hidden="true"></label>
                    <input type="radio" id="star4" name="rating" value="4" disabled {{#is rating 4}} checked {{/is}} />
                    <label class="star" for="star4" title="Great" aria-hidden="true"></label>
                    <input type="radio" id="star3" name="rating" value="3" disabled {{#is rating 3}} checked {{/is}} />
                    <label class="star" for="star3" title="Good" aria-hidden="true"></label>
                    <input type="radio" id="star2" name="rating" value="2" disabled {{#is rating 2}} checked {{/is}} />
                    <label class="star" for="star2" title="Ok" aria-hidden="true"></label>
                    <input type="radio" id="star1" name="rating" value="1" disabled {{#is rating 1}} checked {{/is}} />
                    <label class="star" for="star1" title="Bad" aria-hidden="true"></label>
                  </div>
                </div>
              </span>
          
        
          {{/each}}

            </div>

          </div>
  {{#each reviews}}
          <p>{{description}}</p>
          {{/each}}
        </div>
      </div>
    </li>
  {{/each}}
</ul>